<% include ./partials/boilerplate %>

<div class="myForm">
  <div class="edit">
    <form method="POST" action='/list/<%= superhero.id%>?_method=PUT'>
      <input type="text" name="city" placeholder="City" value="<%= superhero.city %>" />
      <input type="text" name="country" placeholder="Country" value="<%= superhero.country %>" />
      <input class="button" type="submit" value="Edit it!" />
    </div>
  </form>

  <a href="/superhero/list/<%=superhero.id %>">Back to list</a>
</div>
<% include ./partials/end %>
